<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <ImageButton
        android:id="@+id/btn_return"
        android:layout_width="72dp"
        android:layout_height="67dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:backgroundTint="#2196F3"
        android:contentDescription="@string/return_button_description"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/retrun"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_return">

        <TextView
            android:id="@+id/player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_name"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/player_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_name_team"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/player_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_sport"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/player_nationality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_nationality"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/player_date_born"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_date_born"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/player_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_status"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/player_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_gender"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/player_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player_position"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>